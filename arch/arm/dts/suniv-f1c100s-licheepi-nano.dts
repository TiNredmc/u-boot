/dts-v1/;
#include "suniv-f1c100s.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pwm/pwm.h>
/ {
	model = "Lichee Pi Nano";
	compatible = "licheepi,licheepi-nano", "allwinner,suniv-f1c100s",
		     "allwinner,suniv";

	aliases {
		serial0 = &uart0;
		spi0 = &spi0;
		spi1 = &spi1;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
};

&otg_sram {
	status = "okay";
};

&spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins_a>;
	status = "okay";

	NAND:W25N01GV@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand","allwinner,sun4i-a10-nand";
		reg = <0>;
		spi-max-frequency = <24000000>;
        	};
};

&spi1 {
	pinctrl-names = "default1";
	pinctrl-0 = <&spi1_pins_a>;
	status = "okay";

	display@0{
		compatible = "sharp-memlcd";
		#address-cells = <1>;
		#size-cells = <1>;
		SCS-Pin = <&pio 4 11 0>; /* PE11 for SCS, Default state : LOW */
		spi-max-frequency = <1500000>; //1.5MHz for Sharp memory LCD
		memlcd-pwm = <&pwm0 0 500000>;
	};


};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pe_pins>;
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpio = <&pio 4 2 GPIO_ACTIVE_HIGH>; /* PE2 */
	status = "okay";
};

&pwm0 {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pins>;
	status = "okay";
};
